<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="horizontal_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_results_bar</item>
        <item name="android:background">@color/grey</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal_block">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="vertical_orient_block">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="head_bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_white</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/icon_24</item>
        <item name="android:layout_height">@dimen/icon_24</item>
    </style>
    <style name="icon.right" parent="icon">
        <item name="android:gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_32</item>
    </style>
    <style name="icon.left" parent="icon">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/margin_72</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
    </style>

    <style name="vertical_scroll_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/spacing_8</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
    </style>

    <style name="text_item_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_32</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="standard_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>
</resources>
